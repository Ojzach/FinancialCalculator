<UserControl x:Class="FinancialCalculator.Controls.AmtOrPctSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinancialCalculator.Controls"
             xmlns:converters="clr-namespace:FinancialCalculator.Converters"
             x:Name="root"
             mc:Ignorable="d">
    
    
    <StackPanel Orientation="Horizontal">
        <StackPanel.Resources>
            <converters:AmtPctSelectionConverter x:Key="AmtPctSelectionConverter"/>
            <converters:PercentConverter x:Key="PercentageConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </StackPanel.Resources>

        <TextBlock Text="{Binding TitleText, ElementName=root}" Height="20"/>
        <ComboBox SelectedIndex="{Binding IsSetByAmt, ElementName=root, Converter={StaticResource AmtPctSelectionConverter}}" Width="100" Height="20" Margin="8, 0, 8, 0">
            <ComboBoxItem Content="Amount"/>
            <ComboBoxItem Content="Percent"/>
        </ComboBox>

        <TextBox Width="100" Text="{Binding SetPercent, ElementName=root, Converter={StaticResource PercentageConverter}, UpdateSourceTrigger=PropertyChanged}"  Visibility="{Binding IsSetByAmt, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" Height="20"/>
        <TextBox Width="100" Text="{Binding SetAmount, ElementName=root, StringFormat='C'}" Visibility="{Binding IsSetByAmt, Converter={StaticResource BoolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" Height="20"/>
    </StackPanel>
</UserControl>
