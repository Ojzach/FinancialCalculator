<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="lbFinancialAccount">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding AccountName}"/>

            <TextBlock Text="{Binding AccountType}" Grid.Column="1"/>

            <TextBlock Text="{Binding AccountBalance, StringFormat='c'}" Grid.Column="2"/>

            <Button Command="{Binding OpenEditAccountCommand}" Grid.Column="3"/>
        </Grid>
        
    </DataTemplate>

    <DataTemplate x:Key="lbFinancialInstitution">

        <StackPanel Orientation="Vertical">

            <Border Height="20" Background="LightGray">
                <TextBlock Text="{Binding InstitutionName}" Margin="5, 0, 0, 0" TextAlignment="Left" VerticalAlignment="Center" FontWeight="DemiBold" />
            </Border>

            <ListBox ItemsSource="{Binding FinancialAccounts}" ItemTemplate="{StaticResource lbFinancialAccount}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <Button Content="Add" Command="{Binding OpenAddFinancialAccountMenuCommand}" Margin="0, 5, 0, 0"/>
        </StackPanel>

    </DataTemplate>


    <DataTemplate x:Key="FinancialAccountEditBox">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Account Name: " Grid.Row="0" Grid.Column="0"/>
            <TextBox Text="{Binding AccountName}" Grid.Row="0" Grid.Column="1"/>

            <TextBlock Text="Account Type: " Grid.Row="1" Grid.Column="0"/>
            <ComboBox ItemsSource="{Binding FinancialAccountTypes}" SelectedItem="{Binding AccountType}" Height="20" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="1"/>
 
            <TextBlock Text="Current Balance" Grid.Row="2" Grid.Column="0"/>
            <TextBox  Text="{Binding AccountBalance, StringFormat='c'}" Grid.Row="2" Grid.Column="1"/>


        </Grid>
    </DataTemplate>

</ResourceDictionary>