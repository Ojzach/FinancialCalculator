<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:FinancialCalculator.ViewModel"
                    xmlns:local="clr-namespace:FinancialCalculator.ResourceDictionaries">


    <local:BalanceSheetTemplateSelector x:Key="BalanceSheetTemplateSelector"/>

    <DataTemplate x:Key="BalanceSheet">

        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 15">

            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition MaxWidth="75"/>
                    <ColumnDefinition MaxWidth="75"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding BalanceSheetName}" Grid.Column="0"/>
                <TextBlock Text="Notes" Grid.Column="1"/>
                <TextBlock Text="{Binding TotalBalanceSheetPercent, StringFormat='P2'}" Grid.Column="2" Background="LightGray" TextAlignment="Center"/>
                <TextBlock Text="{Binding TotalBalanceSheetAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Background="LightGray" TextAlignment="Center"/>
            </Grid>

            <ListBox Height="150" ItemsSource="{Binding BalanceSheetItems}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition MaxWidth="75"/>
                                <ColumnDefinition MaxWidth="75"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                            <TextBox Text="{Binding Notes}" Grid.Column="1"/>
                            <TextBox Text="{Binding MonthlyPercentStr, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2"/>
                            <TextBox Text="{Binding MonthlyAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="3"/>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

            <Grid Margin="5" Visibility="{Binding AddBalanceItemBoxVisible}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Name:" Grid.Column="0"/>
                <TextBox Text="{Binding AddBalanceItemName}" Grid.Column="1"/>
                <Button Content="Submit" Command="{Binding CreateBalanceItemCommand}" Grid.Column="2"/>
            </Grid>

            <Button Content="Add" Command="{Binding OpenAddBalanceItemBoxCommand}"/>
        </StackPanel>
    </DataTemplate>



    <DataTemplate x:Key="SavingsBalanceSheet" >

        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 15">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition MaxWidth="75"/>
                    <ColumnDefinition MaxWidth="75"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding BalanceSheetName}" Grid.Column="0"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <TextBlock Text="Max Percentage: "/>
                    <TextBox Text="{Binding MaxTotalSavingsPercentStr, UpdateSourceTrigger=PropertyChanged}" Width="75"/>
                </StackPanel>
                <TextBlock Text="{Binding TotalBalanceSheetPercent, StringFormat='P2'}" Grid.Column="2" Grid.Row="2" Background="LightGray" TextAlignment="Center"/>
                <TextBlock Text="{Binding TotalBalanceSheetAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="2" Background="LightGray" TextAlignment="Center"/>
            </Grid>

            <ListBox Height="100" ItemsSource="{Binding BalanceSheetItems}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition MaxWidth="75"/>
                                <ColumnDefinition MaxWidth="75"/>
                                <ColumnDefinition MaxWidth="75"/>
                                <ColumnDefinition MaxWidth="75"/>
                                <ColumnDefinition MaxWidth="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                            <TextBox Text="{Binding MonthlyPercentStr, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>
                            <TextBox Text="{Binding MonthlyAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="2"/>
                            <TextBox Text="{Binding GoalSavingsAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="3"/>
                            <TextBox Text="{Binding CurrentSavingsAmount, StringFormat='c', UpdateSourceTrigger=PropertyChanged}" Grid.Column="4"/>
                            <DatePicker SelectedDate="{Binding GoalDate}" Grid.Column="5"/>
                            <TextBox Text="{Binding Notes}" Grid.Column="6"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </DataTemplate>
    
    
    
</ResourceDictionary>