<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FinancialCalculator.ResourceDictionaries">


    <local:DepositCalculatorTemplateSelector x:Key="DepositCalculatorTemplateSelector"/>

    <DataTemplate x:Key="DepositBudget">

        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 15">

            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition MaxWidth="75"/>
                    <ColumnDefinition MaxWidth="75"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding BudgetName}" FontWeight="Bold" Grid.Column="0" />
            </Grid>

            <ListBox Height="200" ItemsSource="{Binding SubItems}" ItemTemplateSelector="{Binding Source={StaticResource DepositCalculatorTemplateSelector}}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

        </StackPanel>

    </DataTemplate>


    <DataTemplate x:Key="DepositItem">
        <TextBlock Text="{Binding TransactionName}" FontWeight="Bold"/>
    </DataTemplate>
    
</ResourceDictionary>