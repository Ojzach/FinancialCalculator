<UserControl x:Class="FinancialCalculator.Views.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinancialCalculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    
    
    <Border BorderBrush="Black" BorderThickness="0.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Navigation Menu" FontSize="20" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="0"/>

            <StackPanel Grid.Row="1">
                <Button Height="30" Command="{Binding LoadDepositCalculatorViewCommand}" Content="Deposit Calculator" HorizontalContentAlignment="Left"/>
                <Button Height="30" IsEnabled="False" Command="" Content="Expenses" HorizontalContentAlignment="Left"/>
                <Button Height="30" IsEnabled="False" Command="" Content="Spending Budgets" HorizontalContentAlignment="Left"/>
                <Button Height="30" IsEnabled="False" Command="" Content="Savings Goals" HorizontalContentAlignment="Left"/>
                <Button Height="30" Command="{Binding LoadFinancialAccountsViewCommand}"  Content="Banks" HorizontalContentAlignment="Left"/>
                
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
